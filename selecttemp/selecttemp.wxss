/* pages/selecttemp/selecttemp.wxss */

.temp-container {
  width: 100%;
  height: 100%;
  position: relative;
}

.temp-selcet {
  font-size: 30.42rpx;
  color: #999;
  width: 100%;
  /* border-bottom: 1px solid #f2f2f2; */
  box-sizing: border-box;
  /* display: flex;
  align-items: center;
  flex-direction: row; */
  box-shadow: 0 0 5px #f2f2f2;
  background-color: white;
  position: fixed;
  left: 0;
  top: 0;
  z-index: 100;
  padding: 42.12rpx 35.1rpx 30rpx;
  line-height: 37.44rpx;
  margin-bottom: 35.1rpx;
}

.temp-text {
  padding-right: 51.48rpx;
  height: 37.44rpx;
  line-height: 37.44rpx;
}

.isCheck {
  font-size: 37.44rpx;
  color: #1081ff;
  font-weight: bold;
}

.paddingHeiht {
  width: 100%;
  height: 35.1rpx;
  background: white;
  position: relative;
}

.selecttemp-box {
  position: relative;
  width: 100%;
  height: 100%;
  overflow-x: hidden;
  /* top: 95.94rpx; */
}

.selecttemp-warp {
  width: 100%;
  display: flex;
  flex-wrap: no-wrap;
  position: absolute;
  left: 0;
  top:-20rpx;
  /* top: 95.94rpx; */
  transform: all 0.5s;
}

.selecttemp {
  display: flex;
  flex-wrap: wrap;
  box-sizing: border-box;
  justify-content: space-between;
  padding: 23.4rpx 23.4rpx 102rpx 23.4rpx;
  box-sizing: border-box;
  height: 100%;
  position: relative;
}

.templist {
  position: relative;
  width: 344rpx;
  margin-bottom: 30rpx;
  box-sizing: border-box;
  display: inline-block;
  vertical-align: top;
}
.templist:nth-child(1), .templist:nth-child(2){
  /* float: right; */
  margin-top: 23.4rpx;
}
.templist:nth-child(2n) {
  float: right;
  /* margin-left: 23.4rpx; */
}

.tempimg {
  display: block;
  width: 344rpx;
  height: 573rpx;
  background-color: #ccc;
  border: 1px solid #f2f2f2;
  box-sizing: border-box;
  border-radius: 4px;
}

.tempname {
  font-size: 28rpx;
  display: flex;
  justify-content: space-between;
  line-height: 50rpx;
  align-items: center;
  margin-top: 14.4rpx;
}

.tempname text:first-child {
  color: #161616;
}

.tempname text:last-child {
  color: #f22c2c;
}

.tempactive {
  position: absolute;
  right: -12rpx;
  top: -12rpx;
  font-family: '黑体';
  font-size: 35rpx;
  width: 37rpx;
  height: 37rpx;
  line-height: 37rpx;
  background-color: #1081ff;
  color: #fff;
  border-radius: 18rpx;
  background-image: url(data:image/png;base64,iVBORw0KGgoAAAANSUhEUgAAABAAAAAQCAYAAAAf8/9hAAAAfklEQVQ4T92S3RFEQBAG+8voZCAUlwGRkAEZCEEKQrkMRqlaajF+rjyx79210zPi5tNNngcKzOwDtEAi6ffXCAHugEJSM/a7LPDghcDMMqCX1K83swd7ggpIY8kRvBkh/GKWnMFug0iSA2UczDs6N2KQ1MB3qr13sZe38GLBAHMhOBHGe0FeAAAAAElFTkSuQmCC);
  background-repeat: no-repeat;
  background-position: center;
}

.active {
  border: 2px solid #1081ff;
  box-shadow: 0 0 5px #1081ff;
}

.tempbottom {
  position: fixed;
  bottom: 0;
  left: 0;
  width: 100%;
  display: flex;
}

.tempbottom image {
  width: 46.8rpx;
  height: 46.8rpx;
  margin-right: 17rpx;
}

.tempbottom view {
  flex: 1;
  display: flex;
  height: 103rpx;
  justify-content: center;
  align-items: center;
  color: #fff;
  font-size: 32.76rpx;
}

.tempbottom view:first-child {
  background-color: #56bb37;
}

.tempbottom button:last-child {
  background-color: #fc3;
  color: white;
  border-radius: 0;
  flex: 1;
  display: flex;
  height: 103rpx;
  justify-content: center;
  align-items: center;
  font-size: 32.76rpx;
  padding: 0;
}

.tempbottom button:after {
  display: none;
}
