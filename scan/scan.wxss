  text-align: center;
  display: flex;
  display: -webkit-flex;
  font-weight: normal;
  justify-content: center;
  align-items: center;
  position: relative;
  flex-direction: column;
  color: #474747;
  text-align: center;
}

.contentBorder {
  height: 2.34rpx;
  width: 100%;
  background-color: #f2f2f2;
}

.btnff {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 0 52rpx;
  box-sizing: border-box;
  flex-direction: column;
  height: 117rpx;
  line-height: 117rpx;
  overflow: hidden;
  align-items: center;
}

.btnff cover-view {
  width: 100%;
  font-size: 32.76rpx;
  text-align: center;
  font-weight: bold;
  height: 117rpx;
  line-height: 117rpx;
}
