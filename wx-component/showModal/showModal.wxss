/* pages/component/showModal/showModal.wxss */

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  width: 580.32rpx;
  height: 318.24rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 0;
  z-index: 9999;
  background: white;
  margin: -323rpx 105rpx;
  border-radius: 11.7rpx;
  padding-top: 49.14rpx;
  box-sizing: border-box;
}

.modal-title {
  font-size: 32.76rpx;
  color: #202020;
  font-weight: bold;
  text-align: center;
  font-family: "微软雅黑";
}

.modal-content {
  margin-top: 12.12rpx;
  margin-bottom: 12.12rpx;
  padding-left: 46.8rpx;
  /* padding-left:46.8rpx; */
}

.modal-input {
  display: flex;
  background: #fff;
  border-radius: 4rpx;
  font-size: 28rpx;
}

.input {
  width: 100%;
  height: 82rpx;
  font-size: 28rpx;
  line-height: 28rpx;
  padding: 0 20rpx;
  box-sizing: border-box;
  color: #333;
}

input-holder {
  color: #666;
  font-size: 28rpx;
}

.modal-footer {
  display: flex;
  flex-direction: row;
  height: 117rpx;
  border-top: 1px solid #dedede;
  font-size: 34rpx;
  line-height: 117rpx;
}

.btn-cancel {
  width: 50%;
  color: #202020;
  text-align: center;
  font-size: 32.76rpx;
  border-right: 1px solid #dedede;
  font-weight: bold;
}

.btn-confirm {
  width: 50%;
  font-size: 32.76rpx;
  color: #1081FF;
  text-align: center;
  font-weight: bold;
}
