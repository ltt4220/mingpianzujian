.scan-box {
  background-color: white;
  position: fixed;
  left:4.68rpx;
  right:4.68rpx;
  border-top-left-radius: 14.04rpx;
  border-top-right-radius: 14.04rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  font-size: 32.76rpx;
  color:#797979;
  text-align: left;
  box-sizing: border-box;
  padding-top:56.16rpx;
  z-index: 11;
  animation: myflash 0.3s linear both;
}
@keyframes myflash {
    from{
      height: 0;
      bottom:-259.74rpx;
    }to{
      height: 259.74rpx;
      bottom: 0rpx;
    }
}
