/* pages/component/warnBox/warnBox.wxss */
@import "../../scan/scanicon.wxss";

.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: transparent;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}

.modal-dialog {
  min-width: 221.06rpx;
  height: 221.06rpx;
  overflow: hidden;
  position: fixed;
  top: 50%;
  left: 50%;
  z-index: 9999;
  background: rgba(0,0,0,0.75);
  transform: translate(-50%, -50%);
  border-radius: 23.4rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: center;
  align-items: center;
  padding:0 23.4rpx;
  flex-direction: column;
  box-sizing: border-box;
}

.modal-title {
  font-size: 28.08rpx;
  color: white;
  text-align: center;
  font-family: "黑体";
}

.modal-content {
  width: 67.86rpx;
  height: 67.86rpx;
  margin-bottom: 23.4rpx;
}

.checkBox {
  width: 117rpx;
  height: 117rpx;
  border-radius: 50%;
  box-sizing: border-box;
  transition: 0.3s all;
  display: flex;
  justify-content: center;
  align-items: center;
  position: relative;
  overflow: hidden;
}

.check {
  width: 0;
  font-weight: bold;
  height: 67.86rpx;
  line-height: 67.86rpx;
  text-align: center;
  color: white;
  position: absolute;
  left: 50%;
  top: 50%;
  margin-left: -40.43rpx;
  margin-top: -33.93rpx;
  font-size: 90.86rpx;
  animation: mytext 0.8s linear both;
  transition: 0.5s all;
  overflow: hidden;
}

.nocheck {
  width: 0;
}

@keyframes mytext {
  from {
    width: 0;
  }

  to {
    width: 80.86rpx;
  }
}
